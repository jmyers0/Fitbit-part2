<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView android:id="@+id/totalText" android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/avgText"   android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView android:id="@+id/minText"   android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView android:id="@+id/maxText"   android:textSize="18sp" android:layout_width="wrap_content" android:layout_height="wrap_content" />

</LinearLayout>